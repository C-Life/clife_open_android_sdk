<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_health_recomm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_common_whitegray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_common_whitegray"
        android:padding="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imv_operating"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tvw_operating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imv_operating"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="wikikkkkkkkk"
            android:textColor="#4d4d4d"
            android:textSize="16sp" />

    </RelativeLayout>
    <View
        android:id="@+id/bottom_line_short"
        style="@style/Style.Divider.Horizontal.Default"
        android:layout_marginLeft="80dp"
        android:layout_alignParentBottom="true" />
    <View
        android:id="@+id/bottom_line_long"
        style="@style/Style.Divider.Horizontal.Default"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
