<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE8EEF5"
    android:orientation="vertical">



    <TextView
        android:id="@+id/scene_condition_subtitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:visibility="gone"
        android:gravity="center"
        android:text="同时满足以下三个条件"
        android:textColor="#FFFF7747"
        android:textSize="16sp" />
    
    <View 
        style="@style/Style.Divider.Horizontal.Default"/>

    <ListView
        android:id="@+id/listView_scene_condition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:scrollbars="none"
        android:paddingLeft="@dimen/comm_padding"
        android:paddingRight="@dimen/comm_padding"
        android:listSelector="@drawable/btn_white_selector"
        android:divider="@null"
        android:dividerHeight="15dp" />

</LinearLayout>