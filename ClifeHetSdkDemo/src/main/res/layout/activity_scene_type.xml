<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:text="系统场景，指clife平台自动生成的场景"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/btn_system_scene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:text="系统场景"
            android:textSize="16sp" />
        <TextView
            android:text="用户场景，用户自定义的场景列表"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            />
        <Button
            android:id="@+id/btn_user_scene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:text="用户场景"
            android:textSize="16sp" />
        <TextView
            android:text="自定义场景api，调用相关api，创建场景"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            />
        <Button
            android:id="@+id/btn_add_scene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:text="自定义场景api"
            android:textSize="16sp" />



    </LinearLayout>






</ScrollView>
