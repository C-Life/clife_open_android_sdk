<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_user_scene_device_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:text="用户场景设备列表"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_user_scene_condition_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:text="用户场景条件列表"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_user_scene_action_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:text="用户场景动作组合列表"
            android:textSize="16sp" />



        <Button
            android:id="@+id/btn_user_scene_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:text="用户场景添加（适配）"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_user_scene_refersh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:text="用户场景刷新（重新适配）"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_user_scene_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:text="用户场景删除"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_user_scene_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:text="开启场景"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_user_scene_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:text="终止场景"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_user_scene_device_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:text="删除用户场景中设备"
            android:textSize="16sp" />




    </LinearLayout>






</ScrollView>