<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/rl_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imv_device_type"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@mipmap/pic_wifi"
            android:scaleType="centerInside"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="选择要使用的WiFi，并输入密码"
            android:textColor="#5e5e5e"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/box_wifi_line_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_name"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/tv_wifi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="10dip"
                android:singleLine="true"
                android:text="请选择网络"
                android:textColor="#FF000000"
                android:textSize="16sp" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_arrow" />


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#c6c6c5"></ImageView>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="48dp">


            <EditText
                android:id="@+id/edt_wifi_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="请输入WIFI密码"
                android:text=""
                android:inputType="textPassword"
                android:padding="10dip"
                android:textColor="#FF000000"
                android:textColorHint="#919191"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />


        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_bind"
        android:text="开始绑定"
        style="@style/style_common_button"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_botton_bg"
       />


</LinearLayout>