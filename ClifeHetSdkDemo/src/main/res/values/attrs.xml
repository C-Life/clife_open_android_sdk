<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DropOfWater">
        <attr name="long_dp" format="dimension" />
        <attr name="short_dp" format="dimension" />
        <attr name="stroke_width" format="dimension" />
        <attr name="fill" format="boolean" />
        <attr name="background_color" format="color" />
        <attr name="tag" format="string" />
        <attr name="tag_text_color" format="color" />
        <attr name="tag_margint_top" format="dimension" />
        <attr name="tag_text_size" format="dimension" />
        <attr name="tag_drawable" format="reference" />
        <attr name="tag_drawable_padding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ArcViewGroup">
        <attr name="is_need_draw_bg" format="boolean" />
        <attr name="berizer_height" format="dimension" />
        <attr name="constant_distance" format="dimension" />
        <attr name="child_width" format="dimension" />
        <attr name="line_child_nums" format="integer" />
        <attr name="line_height" format="dimension" />
    </declare-styleable>
    <declare-styleable name="SlidingMenu">
        <attr name="mode">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="viewAbove" format="reference" />
        <attr name="viewBehind" format="reference" />
        <attr name="behindOffset" format="dimension" />
        <attr name="behindWidth" format="dimension" />
        <attr name="behindScrollScale" format="float" />
        <attr name="touchModeAbove">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="touchModeBehind">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="shadowDrawable" format="reference" />
        <attr name="shadowWidth" format="dimension" />
        <attr name="fadeEnabled" format="boolean" />
        <attr name="fadeDegree" format="float" />
        <attr name="selectorEnabled" format="boolean" />
        <attr name="selectorDrawable" format="reference" />
    </declare-styleable>
    <declare-styleable name="swipelistviewstyle">
        <attr name="right_width" format="dimension"></attr>
    </declare-styleable>
    <declare-styleable name="HeTCustomLayout">
        <attr name="showLeftImage" format="boolean" />
        <attr name="leftImageId" format="integer" />
        <attr name="leftImageSrc" format="reference" />
        <attr name="funcName" format="string" />
        <attr name="showRightImage" format="boolean" />
        <attr name="rightImageId" format="integer" />
        <attr name="rightImageSrc" format="reference" />
        <attr name="showRightText" format="boolean" />
        <attr name="rightText" format="string" />
        <attr name="showDiliver" format="boolean" /> <!-- 是否显示分割线 -->
    </declare-styleable>
    <declare-styleable name="HeTWlpLayout">
        <attr name="isshowGreenImage" format="boolean" />
        <attr name="isshowDiliver" format="boolean" /> <!-- 是否显示分割线 -->
    </declare-styleable>
    <declare-styleable name="HeTImageTextView">
        <attr name="topImageSrc" format="reference" />
        <attr name="itemName" format="string" />
    </declare-styleable>
    <declare-styleable name="ShimmerView">
        <attr name="reflectionColor" format="color" />
    </declare-styleable>

    <!-- 带有数字进度条的attrs -->
    <declare-styleable name="NumberProgressBar">
        <attr name="progress" format="integer" />
        <attr name="max" format="integer" />
        <attr name="progress_unreached_color" format="color" />
        <attr name="progress_reached_color" format="color" />
        <attr name="progress_reached_bar_height" format="dimension" />
        <attr name="progress_unreached_bar_height" format="dimension" />
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_offset" format="dimension" />
        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="TemperLinelayout">
        <attr name="temp_name" format="string" />
        <attr name="bg_color" format="color" />
    </declare-styleable>
    <declare-styleable name="SeekbarTemper">
        <attr name="temp_seekbar_name" format="string" />
        <attr name="temp_min" format="integer" />
        <attr name="temp_max" format="integer" />
        <attr name="temp_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ColorToggleButton">
        <attr name="toggole_ball_color" format="color" />
        <attr name="toggole_bg_color_sel" format="color" />
        <attr name="toggole_bg_color_unsel" format="color" />
    </declare-styleable>

    <style name="Style.Divider.Horizontal.Default" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/comm_diliver_height</item>
        <item name="android:background">@color/common_dividercolor</item>
    </style>

    <style name="text_style2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textcolor_66</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Style.Text.Homepage.Post.Title" parent="">
        <item name="android:textSize">@dimen/common_textsize_xmiddle</item>
        <item name="android:textColor">@color/textcolor_post_title</item>
    </style>


</resources>